#!/usr/bin/env bash
# This script installs and configures HAProxy as a load balancer
# Requirements:
# - Balance traffic between [STUDENT_ID]-web-01 and [STUDENT_ID]-web-02
# - Use roundrobin algorithm
# - Ensure HAProxy is managed via init script
# - Ubuntu-based system

set -e

# Update and install HAProxy
echo "Updating package list and installing HAProxy..."
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy to start on boot
echo "Enabling HAProxy service..."
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Backup default configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Replace HAProxy configuration
echo "Configuring HAProxy..."
cat <<EOF | sudo tee /etc/haproxy/haproxy.cfg > /dev/null
# HAProxy configuration file
# Managed by 1-install_load_balancer script

global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon
    maxconn 256

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000
    retries 3

frontend http_front
    bind *:80
    default_backend web_backend

backend web_backend
    balance roundrobin
    option http-server-close
    option forwardfor
    http-request set-header X-Forwarded-Proto http
    server 6813-web-01 6813-web-01:80 check
    server 6813-web-02 6813-web-02:80 check
EOF

# Restart HAProxy to apply configuration
echo "Restarting HAProxy..."
sudo service haproxy restart

echo "HAProxy installation and configuration complete!"

