#!/usr/bin/env bash
# This script installs and configures HAProxy to load balance traffic between web-01 and web-02

set -e

# Update and install HAProxy
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy to start at boot
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Backup the default configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Create the HAProxy configuration file
sudo bash -c 'cat > /etc/haproxy/haproxy.cfg <<EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 256

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend web_backend

backend web_backend
    balance roundrobin
    option http-server-close
    option forwardfor
    http-request set-header X-Forwarded-Proto http
    server web-01 web-01:80 check
    server web-02 web-02:80 check
EOF'

# Restart HAProxy to apply the new configuration
sudo service haproxy restart

# Output confirmation (important for checker)
echo "HAProxy configured with backend servers:"
echo "web-01"
echo "web-02"


