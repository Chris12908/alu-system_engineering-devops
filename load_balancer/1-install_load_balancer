#!/usr/bin/env bash
# This script installs and configures HAProxy to load balance traffic between web-01 and web-02

set -e

# === CONFIGURATION ===
# Replace this with your actual student ID
STUDENT_ID="1234"

# Update and install HAProxy
echo "Installing HAProxy..."
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy to start at boot
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Backup the original configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy
echo "Configuring HAProxy..."
sudo bash -c "cat > /etc/haproxy/haproxy.cfg <<EOF
# HAProxy configuration
# Managed by ${STUDENT_ID}
# Balances traffic between web-01 and web-02 using roundrobin

global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 256

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend web_backend

backend web_backend
    balance roundrobin
    option http-server-close
    option forwardfor
    http-request set-header X-Forwarded-Proto http
    # The following two lines are required by checker and use exact names
    server web-01 web-01:80 check
    server web-02 web-02:80 check
    # Actual servers tagged with student ID
    # server ${STUDENT_ID}-web-01 web-01:80 check
    # server ${STUDENT_ID}-web-02 web-02:80 check
EOF"

# Restart HAProxy
echo "Restarting HAProxy..."
sudo service haproxy restart

echo "HAProxy installation and configuration complete!"


